{
    "config": {
        "platform": {
            "php": "8.2.0"
        },
        "platform-check": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "no-dev": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan config:cache --ansi",
            "@php artisan route:cache --ansi"
        ],
        "post-update-cmd": [
            "@php artisan config:cache --ansi",
            "@php artisan route:cache --ansi"
        ]
    }
}
